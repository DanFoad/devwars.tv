<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.bezman.model">

    <class name="com.bezman.model.Team" table="teams" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"></generator>
        </id>

        <property name="name" type="string" column="name"></property>
        <property name="embedLink" type="string" column="embedLink"></property>
        <property name="status" type="string" column="status"></property>
        <property name="endGame" type="string" column="endgame"></property>
        <property name="win" type="boolean" column="win"></property>
        <property name="designVotes" type="integer"></property>
        <property name="funcVotes" type="integer"></property>
        <property name="codeVotes" type="integer"></property>

        <property name="codeUrl" type="string"></property>
        <property name="websiteUrl" type="string"></property>

        <many-to-one name="userTeam" class="UserTeam"></many-to-one>

        <set name="players" table="players" lazy="false">
            <key column="team_id"></key>
            <one-to-many class="Player"></one-to-many>
        </set>

        <set name="completedObjectives" table="completed_objectives" lazy="false" cascade="all,delete,delete-orphan">
            <key column="team"></key>
            <one-to-many class="com.bezman.model.CompletedObjective"></one-to-many>
        </set>

        <many-to-one name="game" class="com.bezman.model.Game" column="game_id"></many-to-one>
    </class>

</hibernate-mapping>