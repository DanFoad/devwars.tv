<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.bezman.model.UserTeam" table="user_teams">
        <id name="id">
           <generator class="increment"></generator>
        </id>

        <property name="name" column="team_name" type="string"></property>

        <many-to-one name="owner" class="com.bezman.model.User"></many-to-one>

        <set name="members" table="team_members">
            <key column="team_id"></key>
            <many-to-many class="com.bezman.model.User" column="user_id"></many-to-many>
        </set>
    </class>
</hibernate-mapping>