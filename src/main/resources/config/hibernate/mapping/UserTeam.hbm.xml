<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.bezman.model.UserTeam" table="user_teams">
        <id name="id"></id>

        <property name="name" column="team_name" type="string"></property>

        <one-to-one name="owner" cascade="all" class="com.bezman.model.User"></one-to-one>

        <set name="members" cascade="all">
            <key column="team_id"></key>
            <one-to-many class="com.bezman.model.User"></one-to-many>
        </set>

        <set name="invites" table="team_invites">
            <key column="team_id"></key>
            <many-to-many class="com.bezman.model.User" column="user_id"></many-to-many>
        </set>
    </class>
</hibernate-mapping>